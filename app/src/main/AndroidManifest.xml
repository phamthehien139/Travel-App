<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.travel">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/travelapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/travelapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false"
        android:largeHeap="true">
        <activity android:name=".ThanhPhoDetails">

        </activity>
        <activity android:name=".Models.ThanhPhoItem"
            tools:ignore="Instantiatable" />
        <activity android:name=".Details">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.example.travel.NoteEdit"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.travel.NoteActivity"
               />
        </activity>
        <activity
            android:name="com.example.travel.NoteDetail"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.example.travel.NoteActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.travel.NoteActivity" />
        </activity>
        <activity android:name="com.example.travel.NoteAdd"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.travel.NoteActivity"
               />
        </activity>
        <activity android:name="com.example.travel.NoteActivity"
            android:label="@string/Note_Title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>





    </application>



</manifest>